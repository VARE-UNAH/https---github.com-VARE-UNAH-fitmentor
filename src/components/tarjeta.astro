---
// Card.astro
interface Props {
  icon: string;
  title: string;
  description: string;
  link: string;
}

const { icon, title, description, link } = Astro.props;
---

<div class="p-8 space-y-3 border-2 border-blue dark:blue rounded-xl">
  <span class="inline-block text-blue dark:text-blue">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon} />
    </svg>
  </span>

  <h1 class="text-xl font-semibold text-gray-700 capitalize dark:text-white">{title}</h1>

  <p class="text-gray-500 dark:text-gray-300">
    {description}
  </p>

  <a href={link} class="inline-flex p-2 text-isai dark:text-isai capitalize transition-colors duration-300 transform bg-blue rounded-full rtl:-scale-x-100 dark:bg-blue-500 dark:text-white hover:underline hover:text-white dark:hover:text-white">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 9l3 3m0 0l-3 3m3-3H8m13 0a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
  </a>
</div>
