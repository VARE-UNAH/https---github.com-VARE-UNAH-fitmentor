---
export interface Props {
    title: string;
}

const { title } = Astro.props;
const menuItems = [
  { name: "Inicio", href: "/", key: "home" },
  { name: "Quienes somos?", href: "/quienes-somos", key: "about" },
  { name: "Planes", href: "/planes", key: "plans" },
  { name: "MisiÃ³n", href: "/mision", key: "mission" },
];

const currentPath = Astro.url.pathname;

const isActive = (href: string) => currentPath === href;
---

<header class="w-full py-4 shadow-lg bg-isai z-[1000]">
    <div class="max-w-[120rem] mx-auto text-gray-50 px-6 md:px-8 lg:px-10">
      <nav class="w-full flex flex-col md:flex-row items-center font-sans">
        <a class="text-white text-2xl mb-4 md:mb-0" href="/">FitMentor</a>
        <div class="flex-1 relative hidden md:flex items-center justify-center">
            <ul class="mx-auto inline-flex gap-6 text-sm font-light">
            {menuItems.map((item) => (
              <li>
                <a 
                  class={`relative ${isActive(item.href) ? 'font-bold underline underline-offset-8 text-blue after:h-px after:content-[""] after:w-full after:absolute after:top-full after:bg-accent-500 after:left-0 after:translate-y-1' : ''}`} 
                  href={item.href}
                >
                  {item.name}
                </a>
              </li>
            ))}
          </ul>
          <ul class="absolute right-0">
            <li class="relative">
              <a class=" h-10 rounded-lg flex items-center justify-center text-base bg-accent-500 leading-none px-12 uppercase" href="">
                Contact
              </a>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </header>
  
